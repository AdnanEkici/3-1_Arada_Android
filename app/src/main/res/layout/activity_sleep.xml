<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:fillViewport="true"
    tools:context=".SleepActivity.SleepActivity">


    <RelativeLayout
        android:id="@+id/SleepActicityRRID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/SleepActicitToolbarID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white">

                <TextView
                    android:id="@+id/SleepActivityDateTextID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="WED JAN 26"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/SleepActivityTimeTextID"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/SleepActivityDateTextID"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_alignEnd="@id/SleepActivityDateTextID"
                    android:layout_alignStart="@id/SleepActivityDateTextID"
                    android:text="20:39:35"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/backAccountID"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/goback" />
            </RelativeLayout>




        </androidx.appcompat.widget.Toolbar>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bar"
            android:clipChildren="false"
            app:itemIconSize="26dp"
            app:itemIconTint="@drawable/tab_color"
            app:itemTextColor="@drawable/tab_color"
            app:menu="@menu/menu">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/homeViewBtnID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-15dp"
                android:scaleType="center"
                android:src="@drawable/logo_white"
                android:translationZ="90dp"
                app:backgroundTint="@color/green"
                app:fabCustomSize="75dp"
                app:maxImageSize="60dp"
                app:tint="@android:color/white" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>



        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/SleepActivityChartID"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_height="250dp"
            android:layout_below="@id/SleepActicitToolbarID"
            />


    </RelativeLayout>


</ScrollView>